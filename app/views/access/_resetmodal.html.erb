<div class="modal fade" id="resetModal" tabindex="-1" role=:dialog aria-labelledby="myModalLabel" aria-hidden="true"> 
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="azModalLabel">Reset Password</h4>
      </div>
      <div class="modal-body">
        <%= form_tag(forgot_path) do %>
        <br>
         <div class="form-group">
          <%= label_tag(:username, "Email Address",class: "control-label") %>
          <%= text_field_tag :username, params[:username], autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
        &nbsp;
          <%= submit_tag("Send Email", class: "btn btn-primary email") %>
        </div>
        <% end %>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>